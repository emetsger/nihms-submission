<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.dataconservancy.nihms</groupId>
        <artifactId>nihms-parent</artifactId>
        <version>1.0.0-SNAPSHOT</version>
    </parent>

    <artifactId>nihms-integration</artifactId>
    <name>Integration Tests</name>

    <profiles>
        <profile>
            <id>external-ftp-server</id>
            <activation>
                <property>
                    <name>ftp.server</name>
                </property>
            </activation>
            <properties>
                <docker.host.address>${ftp.server}</docker.host.address>
                <docker.skip>true</docker.skip>
            </properties>
        </profile>
    </profiles>

    <dependencies>

        <dependency>
            <groupId>org.dataconservancy.nihms</groupId>
            <artifactId>nihms-ftp-transport</artifactId>
            <version>${project.parent.version}</version>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>org.dataconservancy.nihms</groupId>
            <artifactId>sword2-transport</artifactId>
            <version>${project.parent.version}</version>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>org.dataconservancy.nihms</groupId>
            <artifactId>nihms-cli</artifactId>
            <version>${project.parent.version}</version>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>ch.qos.logback</groupId>
            <artifactId>logback-classic</artifactId>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>com.google.guava</groupId>
            <artifactId>guava</artifactId>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>commons-io</groupId>
            <artifactId>commons-io</artifactId>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>org.mockito</groupId>
            <artifactId>mockito-core</artifactId>
            <scope>test</scope>
        </dependency>

    </dependencies>

    <build>

        <plugins>

            <plugin>
                <groupId>io.fabric8</groupId>
                <artifactId>docker-maven-plugin</artifactId>
                <configuration>
                    <images>
                        <image>
                            <alias>ftpserver</alias>
                            <name>pass/ftpserver-demo:${project.parent.version}</name>
                            <build>
                                <dockerFile>${project.basedir}/src/test/resources/docker/Dockerfile</dockerFile>
                            </build>
                            <run>
                                <wait>
                                    <time>6000</time>
                                </wait>
                                <ports>
                                    <port>21:21</port>
                                    <port>30000:30000</port>
                                    <port>30001:30001</port>
                                    <port>30002:30002</port>
                                    <port>30003:30003</port>
                                    <port>30004:30004</port>
                                    <port>30005:30005</port>
                                    <port>30006:30006</port>
                                    <port>30007:30007</port>
                                    <port>30008:30008</port>
                                    <port>30009:30009</port>
                                    <port>30010:30010</port>
                                </ports>
                            </run>
                        </image>
                        <!--<image>-->
                            <!--<alias>dspace</alias>-->
                            <!--<name>oapass/dspace:latest</name>-->
                            <!--<run>-->
                                <!--<wait>-->
                                    <!--<url>http://${docker.host.address}:8181/xmlui</url>-->
                                <!--</wait>-->
                            <!--</run>-->
                        <!--</image>-->
                        <!--<image>-->
                            <!--<alias>postgres</alias>-->
                            <!--<name>oapass/postgres:latest</name>-->
                            <!--<wait>-->
                                <!--<time>6000</time>-->
                            <!--</wait>-->
                        <!--</image>-->
                    </images>
                </configuration>
                <executions>
                    <execution>
                        <id>start-docker-its</id>
                        <phase>pre-integration-test</phase>
                        <goals>
                            <goal>build</goal>
                            <goal>start</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>stop-docker-its</id>
                        <phase>post-integration-test</phase>
                        <goals>
                            <goal>stop</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-failsafe-plugin</artifactId>
                <configuration>
                    <systemProperties>
                        <docker.host.address>${docker.host.address}</docker.host.address>
                        <LOCAL_FTP_SERVER>${docker.host.address}</LOCAL_FTP_SERVER>
                    </systemProperties>
                </configuration>
                <executions>
                    <execution>
                        <goals>
                            <goal>integration-test</goal>
                            <goal>verify</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

        </plugins>
    </build>

</project>
